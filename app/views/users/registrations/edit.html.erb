<div class="container user-login user-signup">
  <div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-lg-6 user-container">
      <h2>Update Profile  <%= resource_name.to_s.humanize %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
        </div>
        <br/><br/> <br/>
        <div class="form-group">
          <%= f.label :email, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <br/><br/><br/> 
        <div class="form-group">
          <%= f.label :password, class: "control-label col-sm-2" %>
          <div class="col-sm-10">  
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            </br>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <br/><br/><br/> 
        <div class="form-group">
          <%= f.label :password_confirmation, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <br/><br/><br/> 
        <div class="form-group">
          <%= f.label :current_password, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <br/><br/><br/> 
        <% if url = current_user&.avatar&.thumb&.url %>
          <div class="form-group avatar-align">
            <%= image_tag(url) %>
          </div>  
        <% end %>
        <br/><br/>
        <div class="form-group">
          <%= f.label "image/vedio", class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <br/><br/><br/>
        <div class="form-group">
          <%= f.label :small_bio, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_area :small_bio, autocomplete: "small-bio", class: "form-control" %>
          </div>
        </div>
        <br/><br/><br/>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10 login-btn">
            <%= f.submit "Update Profile", class: "btn btn-default" %>
            <%= link_to "Back", :back, class: "btn btn-default" %>
          </div>
        </div> 
      <%end%>       
    </div>  
  </div>    
</div>