<div class=''>   
  <%= link_to notification.actor.email, main_app.user_path(notification.actor) %> 
  <% if notification.target_type_like? %>
    has liked your post
  <%else%>
    has commented on
  <%end%>
  <% if check_traget(notification) %>
    <%= link_to check_traget(notification), main_app.user_path(notification.user) %>
  <%end%>  
</div>

<div class=''>
  <% if notification.target_type_like? %>
    <%= check_traget(notification) %>
  <%else%>
    <%= notification&.target&.description %>
  <%end%>   
</div>